# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index
# For database connection test
GET     /                           @controllers.NavigatorController.info

# Auth
#GET     /auth                       @controllers.AuthController.auth(auth_type: String, token: String)
GET     /login                      @controllers.AuthController.social_auth(client_id: String, auth_type: Option[String], third_party_id: Option[String], name: Option[String], avatar:Option[String])

# User
GET     /user/profile               @controllers.UserController.profile(user_id: Long)
GET     /user/other                 @controllers.UserController.other(user_id: Long, me_id: Long)

# URL/Article
GET     /url/submit                 @controllers.UrlController.submit(user_id: Long, url: String, title: String, description: String, anonymous: Int)
GET     /url/list                   @controllers.UrlController.list(user_id: Long)
GET     /url/feeds                  @controllers.UrlController.feeds
GET     /url/comments               @controllers.UrlController.comments(url_id: Long)

# Comment
GET     /comment/add                @controllers.CommentController.add(url_id: Long, content: String, user_id: Long, at_user_id: Option[Long])
GET     /comment/list               @controllers.CommentController.list(user_id: Long)

# Navigator
GET     /navigator                  @controllers.NavigatorController.info

# UserRelation
GET     /relation/add               @controllers.UserRelationControllor.add(from_id: Long, to_id: Long)
GET     /relation/delete            @controllers.UserRelationControllor.delete(from_id: Long, to_id: Long)
GET     /relation/list              @controllers.UserRelationControllor.list(user_id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

    